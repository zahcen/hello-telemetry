<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36}.%M() - %msg%n"/>
      <!--JsonLayout compact="true" eventEol="true" /-->
    </Console>

    <File name="FileAppender" fileName="/tmp/tomcat-log4j.log" append="true">
      <PatternLayout>
        <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
    </File>

    <OpenTelemetry name="OpenTelemetryAppender" captureExperimentalAttributes="true" captureMapMessageAttributes="true" captureMarkerAttribute="true" captureContextDataAttributes="*">
        
        <!--PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36}.%M() - %msg%n"/-->
        <!-- Use a pattern that includes method info -->
        <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36}.%M():%L - %msg%n"/>
        
        <!-- Add custom attributes -->
        <KeyValuePair key="method" value="%M"/>
        <KeyValuePair key="class" value="%C"/>
        <KeyValuePair key="line" value="%L"/>
        <KeyValuePair key="thread" value="%t"/>

    </OpenTelemetry>

  </Appenders>

  <Loggers>
    <Root level="error">
      <!--AppenderRef ref="ConsoleAppender"/>
      <AppenderRef ref="FileAppender"/-->
      <AppenderRef ref="OpenTelemetryAppender"/>
    </Root>

    <Logger name="com.example" level="debug" additivity="false">
      <AppenderRef ref="FileAppender"/>
    </Logger>
  </Loggers>
</Configuration>
